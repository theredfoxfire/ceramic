{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Business Unites Images</h1>

    <table>
        <tbody>
            <tr>
                <th width="100">Id</th>
                <td>{{ buimage.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('web/uploads/buimage/') }}{{ buimage.largeImage }}" height="100" width="100"></td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if buimage.createdAt %}{{ buimage.createdAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('buimage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('buimage_edit', { 'id': buimage.id }) }}">Edit</a>
        </li>
    </ul>
    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-large btn-danger" onclick="return confirm('Are you sure you want to delete this item?')"> Delete</button>
    {{ form_end(delete_form) }}
{% endblock %}

{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Contact list</h1>
{{ knp_pagination_render(contactuss) }}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th width="100">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contactus in contactuss %}
            <tr>
                <td><a href="{{ path('contactus_show', { 'id': contactus.id }) }}">{{ contactuss.getPaginationData.firstItemNumber + loop.index - 1 }}</a></td>
                <td><a href="{{ path('contactus_show', { 'id': contactus.id }) }}">{{ contactus.name }}</a></td>
                <td>{{ contactus.email }}</td>
                <td>{{ contactus.title }}</td>
                <td>{{ contactus.message }}</td>
                <td>
                    {{ form_start(deleteForms[contactus.id]) }}
                        <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                            <i class="fa fa-trash-o"></i>
                            Delete
                        </button>
                    {{ form_end(deleteForms[contactus.id]) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

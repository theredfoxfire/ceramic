{% extends 'base.html.twig' %}

{% block body %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div class="container">
        <div class="contact-us">
            <div class="row">
                <div class="col-md-12">
                    <h1>CONTACT US</h1>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <p>
                      <b>HEAD OFFICE</b><br />
                      {{ overview.mainAddress | raw }}
                    </p>
                </div>
                <div class="col-md-6" style="border-left: solid 1px #6d6e71;padding-left: 40px;">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-default pull-right btn-contact">SUBMIT <i class="fa fa-arrow-circle-o-right"></i> </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

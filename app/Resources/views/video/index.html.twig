{% extends 'baseAdmin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
    <h1>Video list</h1>
    {{ knp_pagination_render(pagination) }}
    {#<a class="pull-right btn btn-small" href="{{ path('video_new') }}"><i class="fa fa-plus-square-o"></i>&nbsp;Upload a new Video of Business Unit</a><br /><br />#}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Largeimage</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for video in pagination %}
            <tr>
                <td><a href="{{ path('video_show', { 'id': video.id }) }}">{{ pagination.getPaginationData.firstItemNumber + loop.index - 1 }}</a></td>
                <td><img src="{{ asset('web/uploads/video/') }}{{ video.largeImage }}" height="100" width="100"></td>
                <td>{% if video.createdAt %}{{ video.createdAt|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a class="btn btn-small" href="{{ path('video_edit', { 'id': video.id }) }}">
                      <button type="submit" class="btn btn-small">
                        <i class="fa fa-pencil-square-o "></i>
                        Edit
                      </button>
                    </a>
                    {#{{ form_start(deleteForms[video.id]) }}
                        <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                            <i class="fa fa-trash-o"></i>
                            Delete
                        </button>
                    {{ form_end(deleteForms[video.id]) }}#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}

{% extends 'baseAdmin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
    <h1>About us list</h1>
    {{ knp_pagination_render(pagination) }}
    {# <a class="pull-right btn btn-small" href="{{ path('aboutus_new') }}"><i class="fa fa-plus-square-o"></i>&nbsp;Create a new About Us</a><br /><br />#}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th width="50">Id</th>
                <th>About us</th>
                <th width="100">Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for aboutus in pagination %}
            <tr>
                <td><a href="{{ path('aboutus_show', { 'id': aboutus.id }) }}">{{ pagination.getPaginationData.firstItemNumber + loop.index - 1 }}</a></td>
                <td>{{ aboutus.story | raw }}</td>
                <td>
                    <a class="btn btn-small" href="{{ path('aboutus_edit', { 'id': aboutus.id }) }}">
                      <button type="submit" class="btn btn-small">
                        <i class="fa fa-pencil-square-o "></i>
                        Edit
                      </button>
                    </a>
                    {#{{ form_start(deleteForms[aboutus.id]) }}
                        <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                            <i class="fa fa-trash-o"></i>
                            Delete
                        </button>
                    {{ form_end(deleteForms[aboutus.id]) }}#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}

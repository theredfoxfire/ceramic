{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Career list</h1>
{{ knp_pagination_render(careers) }}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th width="100">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for career in careers %}
            <tr>
                <td><a href="{{ path('career_show', { 'id': career.id }) }}">{{ careers.getPaginationData.firstItemNumber + loop.index - 1 }}</a></td>
                <td><a href="{{ path('career_show', { 'id': career.id }) }}">{{ career.name }}</a></td>
                <td>{{ career.email }}</td>
                <td>{{ career.title }}</td>
                <td>{{ career.message }}</td>
                <td>
                    {{ form_start(deleteForms[career.id]) }}
                        <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                            <i class="fa fa-trash-o"></i>
                            Delete
                        </button>
                    {{ form_end(deleteForms[career.id]) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

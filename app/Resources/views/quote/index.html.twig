{% extends 'baseAdmin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
    <h1>Quote list</h1>
    {{ knp_pagination_render(pagination) }}
    {#<a class="pull-right btn btn-small" href="{{ path('quote_new') }}"><i class="fa fa-plus-square-o"></i>&nbsp;Create new Quote</a><br /><br />#}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quote</th>
                <th width="100">Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for quote in pagination %}
            <tr>
                <td><a href="{{ path('quote_show', { 'id': quote.id }) }}">{{ pagination.getPaginationData.firstItemNumber + loop.index - 1 }}</a></td>
                <td>{{ quote.quote |raw }}</td>
                <td>
                    <a class="btn btn-small" href="{{ path('quote_edit', { 'id': quote.id }) }}">
                      <button type="submit" class="btn btn-small">
                        <i class="fa fa-pencil-square-o "></i>
                        Edit
                      </button>
                    </a>
                  {#  {{ form_start(deleteForms[quote.id]) }}
                        <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                            <i class="fa fa-trash-o"></i>
                            Delete
                        </button>
                    {{ form_end(deleteForms[quote.id]) }} #}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}

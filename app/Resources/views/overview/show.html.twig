{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Overview</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ overview.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('web/uploads/overview/') }}{{ overview.largeImage }}" height="100" width="100"></td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ overview.overview | raw }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('overview_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('overview_edit', { 'id': overview.id }) }}">Edit</a>
        </li>
    </ul>
    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-large btn-danger" onclick="return confirm('Are you sure you want to delete this item?')"> Delete</button>
    {{ form_end(delete_form) }}
{% endblock %}

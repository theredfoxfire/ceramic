{% extends 'base.html.twig' %}

{% block body %}

<!-- /.container -->
<section id="career-home">
  <div class="col-md-6 img-home hidden-xs" style="background-image: url({{ asset('web/credo/img/home1.png') }});"></div>
  <div class="col-md-6 img-home visible-xs" style="background-image: url({{ asset('web/credo/img/home1.png') }}); height: 250px;">
  </div>
  <div class="col-md-6 text-box">
    <div class="row">
      <p class="tag-line">FASHION <br>DESIGN <br>AND <br>LIFESTYLE</p>
    </div>
    <div style="display:flex; flex-direction: row;" class="row">
      <div class="img-thumb-ceramic" style="background-image: url({{ asset('web/credo/img/thumb1.png') }});"></div>
      <div class="img-thumb-ceramic" style="background-image: url({{ asset('web/credo/img/thumb2.png') }});"></div>
      <div class="img-thumb-ceramic" style="background-image: url({{ asset('web/credo/img/thumb3.png') }});"></div>
    </div>
  </div>
</section>
<section id="business-units">
  <div class="col-md-6 text-box">
    <div class="row">
      <p class="tag-line2">FASHION <br>DESIGN <br>AND <br>LIFESTYLE</p>
    </div>
    <div style="display:flex; flex-direction: row;" class="row">
      <div class="img-thumb-ceramic" style="background-image: url({{ asset('web/credo/img/thumb4.png') }});"></div>
    </div>
  </div>
  <div class="col-md-6 img-home2 hidden-xs" style="background-image: url({{ asset('web/credo/img/home2.png') }});"></div>
  <div class="col-md-6 img-home2 visible-xs" style="background-image: url({{ asset('web/credo/img/home2.png') }});margin-top: 20px;height: 300px;"></div>
</section>
<section class="about-us-home">
  <p class="title-about">OUR STORY</p>
  <div class="content-about"><p>by Emporio Ceramics</p></div>
  <div class="sub-title-about">{{ qtitle[0].quote | raw }}</div>
  <div class="content-about">
    {{ qconten[0].quote | raw }}
  </div>
</section>
<section class="home-business">
  <div class="container">
    <div class="row">
        <div class="col-lg-12">
            <p class="title-business">CERAMICS</p>
            <div id="owl-demo" class="owl-carousel owl-theme">
            {% for item in unites %}
                <div style="display: flex;flex-direction: column;">
                  <div class="item logo-list" style="background-image: url({{ asset('web/uploads/unites/') }}{{ item.largeImage }});"></div>
                  <h6 style="text-align: center;color: #000;">{{ item.title }}</h6>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
  </div>
</section>
<section>
  <div id="carousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
          <li data-target="#carousel" data-slide-to="0" class="active"></li>
          {% for image in product1 %}
              <li data-target="#carousel" data-slide-to="{{ loop.index }}"></li>
          {% endfor %}
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        {% for image in product1 %}
            {% if loop.index == 1 %}
              <div class="item active">
            {% else %}
              <div class="item">
            {% endif %}
                <div style="padding-bottom: 60px;">
                  <p class="title-init">{{ image.category.category }}</p>
                  <p class="title-init hidden-xs" style="margin-top: 80px;">
                    THE
                  </p>
                  <p class="title-init visible-xs" style="margin-top: 20px;">
                    THE
                  </p>
                  <p class="title-designer">{{ image.title }}</p>
                  <p class="content-designer">Exclusively at Jxxxxx</p>
                  <p class="content-designer">{{ image.story | raw }}
                  </p>
                </div>
            </div>
        {% endfor %}
      </div>
      <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
      </a>
  </div>
</section>
<section style="margin-top: -50px;">
  <div id="carousel2" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
          <li data-target="#carousel" data-slide-to="0" class="active"></li>
          {% for image in product2 %}
              <li data-target="#carousel" data-slide-to="{{ loop.index }}"></li>
          {% endfor %}
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox" style="background-color: #f4f3f0;">
        {% for image in product2 %}
            {% if loop.index == 1 %}
              <div class="item active" style="padding-bottom:40px;">
            {% else %}
              <div class="item" style="padding-bottom:40px;">
            {% endif %}
              <div class="col-md-2"></div>
              <div class="col-md-4 carousel-item">
                <img src="{{ asset('web/uploads/unites/') }}{{ image.largeImage }}" style="height: 50%; width:auto;">
              </div>
              <div class="col-md-4">
                <p class="title-init-jewelry">{{ image.category.category }}</p>
                <p class="title-init-jewelry" style="margin-top: 80px;">
                  THE
                </p>
                <p class="title-jewelry">{{ image.title }}</p>
                <div class="content-jewelry"><p>Exclusively at Jxxxxx</p></div>
                <div class="content-jewelry">{{ image.story | raw }}
                </div>
              </div>
              <div class="col-md-2"></div>
            </div>
        {% endfor %}
      </div>
      <a class="left carousel-control" href="#carousel2" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel2" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
      </a>
  </div>
</section>
<section style="margin-top: -50px;">
  <div id="carousel3" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
          <li data-target="#carousel" data-slide-to="0" class="active"></li>
          {% for image in product3 %}
              <li data-target="#carousel" data-slide-to="{{ loop.index }}"></li>
          {% endfor %}
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox" style="background-color: #dfd9d4;">
        {% for image in product3 %}
              {% if loop.index == 1 %}
                <div class="item active">
              {% else %}
                <div class="item">
              {% endif %}
              <div class="col-md-2"></div>
              <div class="col-md-4">
                <p class="title-init-jewelry">{{ image.category.category }}</p>
                <p class="title-init-jewelry" style="margin-top: 80px;">
                  THE
                </p>
                <p class="title-jewelry">{{ image.title }}</p>
                <div class="content-jewelry"><p>Exclusively at Jxxxxx</p></div>
                <div class="content-jewelry">{{ image.story | raw }}
                </div>
              </div>
              <div class="col-md-4 carousel-item">
                <img src="{{ asset('web/uploads/unites/') }}{{ image.largeImage }}" style="height: 50%; width:auto;">
              </div>
              <div class="col-md-2"></div>
            </div>
        {% endfor %}
      </div>
      <a class="left carousel-control" href="#carousel3" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel3" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
      </a>
  </div>
</section>
<section>
  <div>
    <form method="get" action="{{ path('public_subscribe') }}">
    <h3 style="text-align: center;margin-top:100px;">Stay Inspired</h3>
    <div class="content-jewelry"><p>sign up our newsletter to receive the latest news & exclusive events</p></div>
    <div style="display:flex;justify-content:center;margin-bottom:50px;">
      <input type="text" name="email" placeholder="Your Email" style="border:none;border-bottom: solid 2px #dfd9d4; width: 600px;height: 30px;margin-top: 100px;text-align:center;font-size:18px;">
    </div>
    <div style="display:flex;justify-content:center;margin-bottom:50px;">
      <button type="submit" class="btn" style="color: #fff;width: 300px;height: 40px;background-color: #000;">SIGN UP</button>
    </div>
  </form>
  </div>
</section>
{% endblock %}

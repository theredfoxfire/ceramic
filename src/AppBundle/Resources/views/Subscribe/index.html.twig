{% extends 'baseAdmin.html.twig' %}

{% block body -%}
    <h1>Subscribe list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_subscribe_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.email }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}

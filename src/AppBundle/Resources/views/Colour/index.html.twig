{% extends 'baseAdmin.html.twig' %}
{% block body -%}
    <h1>Colour list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Colour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_colour_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.colour }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_colour_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_colour_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_colour_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
